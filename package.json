{
  "name": "static-site-stack",
  "version": "0.1.0",
  "description": "Tiny tools for traditional static site development.",
  "private": true,
  "author": "macropygia",
  "homepage": "https://github.com/macropygia/static-site-stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/macropygia/static-site-stack.git"
  },
  "bugs": {
    "url": "https://github.com/macropygia/static-site-stack/issues"
  },
  "scripts": {
    "lint": "eslint --fix packages/*/src/**",
    "prettier": "prettier --write packages/*/src/**",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false && pnpm -r type-check"
  },
  "lint-staged": {
    "**/*.{ts,js,cjs,mjs,json}": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/src/**/*.ts": [
      "eslint --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=16.8.0",
    "npm": "use pnpm",
    "pnpm": ">=7",
    "yarn": "use pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@microsoft/tsdoc": "^0.14.1",
    "@tsconfig/node16-strictest-esm": "^1.0.1",
    "@types/node": "17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.4.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "lint-staged": "^12.4.3",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-node": "^10.8.0",
    "tsup": "^6.0.1",
    "typedoc": "^0.22.16",
    "typescript": "^4.7.2"
  }
}
