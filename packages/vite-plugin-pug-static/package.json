{
  "name": "@macropygia/vite-plugin-pug-static",
  "version": "0.0.3",
  "description": "Vite plugin to serve multiple Pug as HTML with middleware and build to static HTML.",
  "author": "macropygia",
  "license": "MIT",
  "homepage": "https://github.com/macropygia/static-site-stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/macropygia/static-site-stack.git",
    "directory": "packages/vite-plugin-pug-static"
  },
  "bugs": {
    "url": "https://github.com/macropygia/static-site-stack/issue"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "static",
    "pug"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "type-check": "tsc --noEmit -p .",
    "tsup": "tsup src/index.ts --dts --format esm,cjs",
    "build": "pnpm clean && pnpm tsup",
    "prepublishOnly": "pnpm clean && pnpm type-check && pnpm tsup"
  },
  "dependencies": {
    "@types/picomatch": "^2.3.0",
    "@types/pug": "^2.0.6",
    "ansis": "^1.3.6",
    "picomatch": "^2.3.1",
    "pug": "^3.0.2",
    "vite": "^2.9.9"
  }
}
