root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.pug]
trim_trailing_whitespace = false

[*.svg]
insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 4
